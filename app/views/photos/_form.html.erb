
<body class="body-nueva-foto">
<div class="container foto-nueva">
  <%= form_with(model: @photo, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :image %>
      <%= form.file_field :image, class: "form-control-file" %>
    </div>

    <%= form.submit class: "btn btn-primary" %>
  <% end %>
</div>
</body>